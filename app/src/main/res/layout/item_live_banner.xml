<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/live_home_follow_anchor"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/live_home"
                android:src="@drawable/live_home_follow_anchor" />

            <TextView
                style="@style/live_home"
                android:text="关注" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/live_home_live_center"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/live_home"
                android:src="@drawable/live_home_live_center" />

            <TextView
                style="@style/live_home"
                android:text="中心" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/live_home_clip_video"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/live_home"
                android:src="@drawable/live_home_clip_video" />

            <TextView
                style="@style/live_home"
                android:text="小视频" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/live_home_search_room"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/live_home"
                android:src="@drawable/live_home_search_room" />

            <TextView
                style="@style/live_home"
                android:text="搜索" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/live_home_all_category"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                style="@style/live_home"
                android:src="@drawable/live_home_all_category" />

            <TextView
                style="@style/live_home"
                android:text="分类" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>