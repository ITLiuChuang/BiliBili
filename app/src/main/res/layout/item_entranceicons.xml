<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EAEAEA"

    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_tuijianzhubo"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:background="#EAEAEA">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_head_live" />

        <TextView
            android:id="@+id/tv_typename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image"
            android:paddingTop="5dp"
            android:text="推荐主播"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="当前1980个主播"
            android:textSize="11sp" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="0dp"
            android:paddingTop="8dp"
            android:src="@drawable/ic_right_arrow_bold" />
    </RelativeLayout>

    <com.atguigu.bilibili.view.MyGridView
        android:id="@+id/gv_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:verticalSpacing="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAEAEA">

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="#fff"
            android:text="查看更多" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="5dp"
            android:drawableRight="@drawable/ic_refresh_pink"
            android:text="9条新动态，点击刷新" />

    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="#fff"
        android:textColor="#4000"
        android:text="更多直播"/>
</LinearLayout>